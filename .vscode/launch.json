    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "https://localhost:44322",
            "webRoot": "${workspaceFolder}",
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Import from URL",
            "type": "python",
            "request": "launch",
            "program": "scripts/spidertool.py",
            "args": ["import", "--url", "https://dev.mri.psu.edu/research_instruments/2dcc-2d-crystal-consortium/hybrid-mbe-mbe-2", "--no-doi", "--log", "DEBUG"],
            "console": "integratedTerminal",
            "justMyCode": true
        }, {
            "name": "Python: Register Test DOI",
            "type": "python",
            "request": "launch",
            "program": "scripts/register_doi.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }, {
            "name": "Python: Import from CSV",
            "type": "python",
            "request": "launch",
            "program": "scripts/spidertool.py",
            "args": ["import", "--csv", "data/instruments.csv", "--no-doi", "--log", "DEBUG", "--what-if"],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}