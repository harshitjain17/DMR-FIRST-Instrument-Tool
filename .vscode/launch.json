    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "https://localhost:44322",
            "webRoot": "${workspaceFolder}",
            "version": "beta",
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Export instruments",
            "type": "python",
            "request": "launch",
            "program": "scripts/export_instruments.py",
            "args": ["-i", "831", "-e", "DataCite"],
            "console": "integratedTerminal",
            "justMyCode": true
        }, {
            "name": "Python: Register Test DOI",
            "type": "python",
            "request": "launch",
            "program": "scripts/register_doi.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}